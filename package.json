{
  "name": "@obewds/vue-validators",
  "description": "The @obewds/vue-validators design system component for Vue.js",
  "version": "1.2.6",
  "author": "@oberocks",
  "homepage": "https://github.com/obewds/vue-validators#readme",
  "license": "MIT",
  "main": "./dist/vue-validators.umd.js",
  "module": "./dist/vue-validators.es.js",
  "browser": "./dist/vue-validators.iife.js",
  "exports": {
    ".": {
      "import": "./dist/vue-validators.es.js",
      "require": "./dist/vue-validators.umd.js"
    }
  },
  "files": [
    "dist",
    "src/validators",
    "tests"
  ],
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "tsbuild": "npx rimraf dist && vite build && vue-tsc --emitDeclarationOnly && mv dist/src dist/types",
    "preview": "vite preview",
    "test": "vitest --dom",
    "coverage": "vitest run --dom --coverage",
    "docs:dev": "vitepress dev docs --port 8080",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 8080",
    "pkg:tsbundle": "npm run tsbuild && npm run docs:build && node scripts/cleanup.js",
    "pkg:org": "npm config set scope obewds",
    "pkg:login": "npm adduser",
    "pkg:publish": "npm publish --access public",
    "changelog": "auto-changelog --package --unreleased --backfill-limit 20",
    "git:tag": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "generate": "npx rimraf dist && npm run pkg:tsbundle",
    "bump:patch": "npm version patch && npm run generate && npm run changelog",
    "bump:minor": "npm version minor && npm run generate && npm run changelog",
    "bump:major": "npm version major && npm run generate && npm run changelog"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^18.15.11",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-c8": "^0.30.0",
    "@vue/test-utils": "^2.3.2",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.14",
    "fs-extra": "^11.1.1",
    "happy-dom": "^9.1.9",
    "lodash": "^4.17.21",
    "postcss": "^8.4.21",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitepress": "^1.0.0-alpha.65",
    "vitest": "^0.30.0",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obewds/vue-validators.git"
  },
  "bugs": {
    "url": "https://github.com/obewds/vue-validators/issues"
  },
  "keywords": [
    "vue",
    "vite",
    "OBE:WDS",
    "tailwindcss",
    "rollup",
    "vitepress",
    "postcss",
    "vue3",
    "Vue.js",
    "Tailwind CSS"
  ]
}
